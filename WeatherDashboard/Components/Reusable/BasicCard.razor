<MudCard Outlined="true" Class="m-5">
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">
				@CardTitle
			</MudText>
		</CardHeaderContent>
	</MudCardHeader>
	<MudCardContent>
		<MudText Typo="Typo.body2">
			@Body
		</MudText>
	</MudCardContent>
</MudCard>

@code {
	[Parameter]
	public string? CardTitle { get; set; }

	[Parameter]
	public RenderFragment? Body { get; set; }

	[Parameter]
	public string CardWidth { get; set; } = "400px";
		}
